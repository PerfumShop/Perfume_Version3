@using S3.Train.WebPerFume.Areas.Admin.Models
@model IEnumerable<BrandViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    int stt = 1;
}
<section>
    <div class="card card-body">
        <div class="h4">
            Brands
        </div>
        <div>
            @Html.Partial("_AddOrEditBrandPartial", new BrandViewModel())
         
        </div>
    </div>
</section>
<br />
<section>
    <div class="row">
        @foreach (var item in Model)
        {

            <div class="col-md-6 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-lg">
                                <h4 class="card-title">
                                    <a href="@Url.Action( "DetailBrand", "Brand", new { id = item.Id })" class="text-black">@item.Name  </a>
                                    <img src="~/Content/img/logoBrand/@item.Logo" class="img-sm rounded-circle mr-3" />
                                </h4>
                            </div>
                            <div class="col-sm-auto">
                               
                            </div>
                        </div>
                        <hr>
                        <ul class="list-ticked">
                            @foreach (var product in item.Products)
                            {
                                <li class="row">
                                    <dib class="col-lg">
                                        <img src="~/Content/img/product-men/@product.ImagePath" class="img-sm rounded-circle mr-3" alt="@product.Name" />
                                        <a href="@Url.Action( "DetailProduct", "Product", new { id = item.Id }) " class="text-black align-middle">@product.Name</a>
                                    </dib>
                                    <div class="col-sm-auto">
                                        @Html.Partial("_DeleteBrandPartial", item)
                                        </div>
                                </li>
                                <br />
                            }
                        </ul>
                    </div>
                </div>
            </div>


        }
    </div>
</section>

