@using S3.Train.WebPerFume.Areas.Admin.Models
@model IEnumerable<CategoryViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<section>
    <div class="card card-body">
        <div class="h4">
            Categoty
        </div>
        <div>
            @Html.ActionLink("New", "AddOrEditCategory", "Category", new { @class = "btn btn-gradient-success btn-fw" })
        </div>
    </div>
</section>
<br />
<section>
    <div class="row">
        @foreach (var item in Model)
        {

            <div class="col-md-6 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-lg">
                                <h4 class="card-title">
                                    <a href="@Url.Action("DetailCategory","Category", new { id= item.Id})" class="text-black">@item.Name</a>
                                </h4>
                            </div>
                            <div class="col-sm-auto">
                                @Html.ActionLink("Add Product", "AddOrEditCategory", "Category",new { id = item.Id}, new { @class = "btn btn-gradient-info btn-sm" })
                            </div>
                        </div>
                        <hr>
                        <ul class="list-ticked">
                            @foreach (var product in item.ProductCategoriesModels)
                            {
                                <li class="row">
                                    <dib class="col-lg">
                                        <img src="~/Content/img/product-men/@product.ImagePath" class="img-sm rounded-circle mr-3" alt="@product.Name" />
                                        <a href="# " class="text-black align-middle">@product.Name</a>
                                    </dib>
                                    <div class="col-sm-auto">
                                        @Html.ActionLink("Delete", "DeleteProductOnCategory","Category", new { product_Id = product.Id, category_Id = item.Id},
                                                new { @class = "btn btn-gradient-danger btn-sm" , onclick = "return confirm('Are you sure delete this product out this category?');"})
                                    </div>
                                </li>
                                <br />
                            }
                        </ul>
                    </div>
                </div>
            </div>


        }
    </div>
</section>