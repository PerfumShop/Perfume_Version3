@model S3.Train.WebPerFume.Areas.Admin.Models.VendorViewModel

@{
    ViewBag.Title = "DetailVendor";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="card">
    <div class="card-body">
        <div class="h3 card-header">Detail @Model.Name Vendor</div>
        <br />
        <div class="container">
            <div class="row row-cols-1 h-100">
                <div class="col col-lg">
                    Name: @Model.Name
                </div>
            </div>
            <br />

            <br />
            <div class="row row-cols-1 h-50">
                <div class="col col-lg">
                    Active:
                    @{
                        if (Model.IsActive)
                        {
                            <label class="badge badge-success">On</label>
                        }
                        else
                        {
                            <label class="badge badge-danger">Off</label>
                        }
                    }
                </div>
            </div>
            <br />
            <div class="row row-cols-1 h-50">
                <div class="col col-lg">
                    Email: @Model.Email
                </div>
            </div>
            <br />
            <div class="row row-cols-1 h-50">
                <div class="col col-lg">
                    Address: @Model.Address
                </div>
            </div>
            <br />
            <div class="row row-cols-1 h-50">
                <div class="col col-lg">
                    PhoneNumber: @Model.PhoneNumber
                </div>
            </div>
            <br/>
            <div class="row row-cols-1 h-50">
                <div class="col col-lg">
                    Create Date: @Model.CreateDate
                </div>
            </div>
            <br />
            <div class="row row-cols-1 h-50">
                <div class="col col-lg">
                    Update Date: @Model.UpdateDate
                </div>
            </div>
            <br />
           
            @Html.Partial("~/Areas/Admin/Views/Product/_ProductSmall_Info.cshtml", Model.Products)
        </div>
        <div  class="btn-toolbar" role="toolbar">
            @Html.Partial("_AddOrEditVendorPartial", Model)
            @Html.Partial("_DeleteVendorPartial", Model)
        </div>
        <br />
            @Html.ActionLink("Back To List", "Index", "Vendor", new { @class = "btn btn-gradient-primary btn-fw" })
        
    </div>

</div>