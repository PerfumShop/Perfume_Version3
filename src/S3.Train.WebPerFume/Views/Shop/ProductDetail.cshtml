@using S3.Train.WebPerFume.Models
@model ProductVaDetailViewModel
@{
    ViewBag.Title = "ProductDetail";
    Layout = "~/Views/Shared/_LayoutUser.cshtml"; 
}
<div class="breacrumb-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb-text product-more">
                    <a href="./home.html"><i class="fa fa-home"></i> Home</a>
                    <a href="./shop.html">Shop</a>
                    <span>Detail</span>
                    <a href="./shop.html">@Model.Product.Name</a>
                </div>
            </div>
        </div>
    </div>
</div>
<section class="product-shop spad page-details">
    <div class="container">
        <div class="col-lg-12">
            <div class="row">
                <div class="col-lg-6">
                    <div class="product-pic-zoom" style="position: relative; overflow: hidden;">
                        <img class="product-big-img" src="~/Content/img/product-men/@Model.Product.ImagePath" alt="@Model.Product.Name">
                        <div class="zoom-icon">
                            <i class="fa fa-search-plus"></i>
                        </div>
                    </div>
                    <div class="product-thumbs">
                        <div class="product-thumbs-track ps-slider owl-carousel">
                            <div class="pt active" data-imgbigurl="">
                                <img src="~/Content/img/product-men/@Model.Product.ImagePath" alt="@Model.Product.Name">
                            </div>
                            @foreach (var img in Model.ProductImage)
                            {
                                <div class="pt" data-imgbigurl="~/Content/img/product-men/@img.ImagePath">
                                    <img src="~/Content/img/product-men/@img.ImagePath" alt="@Model.Product.Name @Model.Volume">
                                </div>
                            }

                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="product-details">
                        <div class="pd-title">
                            <span>oranges</span>
                            <h3>Pure Pineapple</h3>
                            <a href="#" class="heart-icon"><i class="icon_heart_alt"></i></a>
                        </div>
                        <div class="pd-rating">
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star-o"></i>
                            <span>(5)</span>
                        </div>
                        <div class="pd-desc">
                            <p>
                                Lorem ipsum dolor sit amet, consectetur ing elit, sed do eiusmod tempor sum dolor
                                sit amet, consectetur adipisicing elit, sed do mod tempor
                                @Html.Raw(HttpUtility.HtmlDecode(Model.Product.Description));
                            </p>
                            <h4>@Model.Price <span>@Model.DiscountPrice</span></h4>
                        </div>

                        <div class="pd-size-choose">
                            @*List Volume*@
                            @foreach (var volume in Model.Product.ProductVariations.OrderBy(p=>p.Price))
                            {
                                <div class="sc-item w-auto">
                                    <a href="@Url.Action("ProductDetail", "Shop", new { id = volume.Product_Id, volume = volume.Volume })" class="btn mdi-radio text-black">@volume.Volume</a>
                                </div>
                            }
                        </div>
                        <div class="quantity">
                            <div class="pro-qty">
                                <input type="text" value="1">
                            </div>
                            <a href="#" class="primary-btn pd-cart">Add To Cart</a>
                        </div>
                        <ul class="pd-tags">
                            <li><span>CATEGORIES</span>: @foreach (var ca in Model.Product.Categories) { @ca.Name }</li>
                            <li><span>Brand</span>: @Model.Product.Brand.Name</li>
                        </ul>
                        <div class="pd-share">
                            <div class="p-code">Sku : @Model.SKU</div>
                            <div class="pd-social">
                                <section id="socialLoginForm">
                                    @Html.Partial("~/Views/Account/_ExternalLoginsListPartial.cshtml", new S3.Train.WebPerFume.Models.ExternalLoginListViewModel { ReturnUrl = ViewBag.ReturnUrl })
                                </section>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="product-tab">
                <div class="tab-item">
                    <ul class="nav" role="tablist">
                        <li>
                            <a class="active" data-toggle="tab" href="#tab-1" role="tab">DESCRIPTION</a>
                        </li>
                        <li>
                            <a data-toggle="tab" href="#tab-2" role="tab">SPECIFICATIONS</a>
                        </li>
                        <li>
                            <a data-toggle="tab" href="#tab-3" role="tab">Customer Reviews (02)</a>
                        </li>
                    </ul>
                </div>
                <div class="tab-item-content">
                    <div class="tab-content">
                        <div class="tab-pane fade-in active" id="tab-1" role="tabpanel">
                            <div class="product-content">
                                <div class="row">
                                    <div class="col-lg-6">
                                        <h5>Introduction</h5>
                                        <p>
                                            Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do
                                            eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim
                                            ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut
                                            aliquip ex ea commodo consequat. Duis aute irure dolor in
                                            @Html.Raw(HttpUtility.HtmlDecode(Model.Product.Description));
                                        </p>
                                    </div>

                                </div>
                            </div>
                        </div>
                        <div class="tab-pane fade" id="tab-2" role="tabpanel">
                            <div class="specification-table">
                                <table>
                                    <tr>
                                        <td class="p-catagory">Customer Rating</td>
                                        <td>
                                            <div class="pd-rating">
                                                <i class="fa fa-star"></i>
                                                <i class="fa fa-star"></i>
                                                <i class="fa fa-star"></i>
                                                <i class="fa fa-star"></i>
                                                <i class="fa fa-star-o"></i>
                                                <span>(5)</span>
                                            </div>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="p-catagory">Price</td>
                                        <td>
                                            <div class="p-price">@Model.Price</div>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="p-catagory">Brand</td>
                                        <td>
                                            <div class="p-stock">@Model.Product.Brand.Name</div>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="p-catagory">Vendor</td>
                                        <td>
                                            <div class="p-stock">@Model.Product.Vendor.Name</div>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="p-catagory">Add To Cart</td>
                                        <td>
                                            <div class="cart-add">+ add to cart</div>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="p-catagory">Availability</td>
                                        <td>
                                            <div class="p-stock">22 in stock</div>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="p-catagory">Volume</td>
                                        <td>
                                            <div class="p-size">@Model.Volume</div>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="p-catagory">Sku</td>
                                        <td>
                                            <div class="p-code">@Model.SKU</div>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                        <div class="tab-pane fade" id="tab-3" role="tabpanel">
                            <div class="customer-review-option">
                                <h4>2 Comments</h4>
                                <div class="comment-option">
                                    <div class="co-item">
                                        <div class="avatar-pic">
                                            <img src="~/Content/img/product-men/man-issey.jpg" alt="">
                                        </div>
                                        <div class="avatar-text">
                                            <div class="at-rating">
                                                <i class="fa fa-star"></i>
                                                <i class="fa fa-star"></i>
                                                <i class="fa fa-star"></i>
                                                <i class="fa fa-star"></i>
                                                <i class="fa fa-star-o"></i>
                                            </div>
                                            <h5>Brandon Kelley <span>27 Aug 2019</span></h5>
                                            <div class="at-reply">Nice !</div>
                                        </div>
                                    </div>
                                    <div class="co-item">
                                        <div class="avatar-pic">
                                            <img src="~/Content/img/product-men/man-nuance.jpg" alt="">
                                        </div>
                                        <div class="avatar-text">
                                            <div class="at-rating">
                                                <i class="fa fa-star"></i>
                                                <i class="fa fa-star"></i>
                                                <i class="fa fa-star"></i>
                                                <i class="fa fa-star"></i>
                                                <i class="fa fa-star-o"></i>
                                            </div>
                                            <h5>Roy Banks <span>27 Aug 2019</span></h5>
                                            <div class="at-reply">Nice !</div>
                                        </div>
                                    </div>
                                </div>
                                <div class="personal-rating">
                                    <h6>Your Ratind</h6>
                                    <div class="rating">
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star-o"></i>
                                    </div>
                                </div>
                                <div class="leave-comment">
                                    <h4>Leave A Comment</h4>
                                    <form action="#" class="comment-form">
                                        <div class="row">
                                            <div class="col-lg-6">
                                                <input type="text" placeholder="Name">
                                            </div>
                                            <div class="col-lg-6">
                                                <input type="text" placeholder="Email">
                                            </div>
                                            <div class="col-lg-12">
                                                <textarea placeholder="Messages"></textarea>
                                                <button type="submit" class="site-btn">Send message</button>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Product Shop Section End -->
<!-- Related Products Section End -->
<div class="related-products spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <h2>Related Products</h2>
                </div>
            </div>
        </div>
        <div class="row">
            @foreach (var item in ViewBag.ProductRelate as IEnumerable<ProductsModel>)
            {
                <div class="col-lg-3 col-sm-6">
                    <div class="product-item">
                        <div class="pi-pic">
                            <a href="@Url.Action("ProductDetail", "Shop", new { id = item.Id, volume = item.ProductVariations.FirstOrDefault(m => m.Product_Id == item.Id).Volume })"
                               class="btn mdi-radio text-black">
                                <img src="~/Content/img/product-men/@item.ImagePath" alt="@item.Name">
                            </a>
                            <div class="sale">Sale</div>
                            <div class="icon">
                                <i class="icon_heart_alt"></i>
                            </div>
                            <ul>
                                <li class="w-icon active"><a href="#"><i class="icon_bag_alt"></i></a></li>
                                <li class="quick-view"><a href="#">+ Quick View</a></li>
                                <li class="w-icon"><a href="#"><i class="fa fa-random"></i></a></li>
                            </ul>
                        </div>
                        <div class="pi-text">
                            <div class="catagory-name">@item.Brand.Name</div>
                            <a href="@Url.Action("ProductDetail", "Shop", new { id = item.Id, volume = item.ProductVariations.FirstOrDefault(m => m.Product_Id == item.Id).Volume })">
                                <h5>@item.Name</h5>
                            </a>
                            <div class="product-price">
                                @item.Price
                                <span>@item.DiscountPrice</span>
                            </div>
                        </div>
                    </div>
                </div>
             }
        </div>
    </div>
</div>
<!-- Related Products Section End -->
